#:kivy 1.0
#:import Factory kivy.factory.Factory

<PopupError@Popup>:
    auto_dismiss: False

    Label:
        text: "You have to select a currency\nand set values!"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "y":0.7}
        font_size : 27
        color : (1,0,0,1)


    Button:
        text: "Ok"
        size_hint: 0.2, 0.2   
        pos_hint: {"x":0.4, "y":0.2} 
        on_release : root.dismiss()

<PopErr>:
    Label:
        text: "You have to select a currency\nand set values!\nClick outside of window to dismiss."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "y":0.7}
        font_size : 20
        color : (1,0,0,1)


    Button:
        text: "Exit App"
        size_hint: 0.2, 0.2   
        pos_hint: {"x":0.4, "y":0.2} 
        on_release : exit()


